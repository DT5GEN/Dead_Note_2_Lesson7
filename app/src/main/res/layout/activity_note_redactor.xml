<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:id="@+id/root_card_view"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="10dp"
        android:padding="18dp"
        app:cardUseCompatPadding="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:contentPadding="8dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/activity_note_redactor__heading_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="29sp"
                android:textStyle="bold"
                tools:text="Heading"

                />

            <EditText
                android:id="@+id/activity_note_redactor__body_text_edit_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                tools:text="Text body" />


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/activity_note_redactor__save_note_image_view"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:layout_marginTop="120dp"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/ic_baseline_done_outline_24"


                />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/activity_note_redactor__delete_note_image_view"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="end"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/ic_baseline_delete_forever_24" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>
</FrameLayout>